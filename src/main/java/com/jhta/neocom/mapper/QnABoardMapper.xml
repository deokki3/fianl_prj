<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.neocom.mapper.QnABoardMapper">

	<insert id="insert" parameterType="qnaboard">
		insert into qna_board 
		values(get_seq('qnaboardSeq'),#{mem_no},#{qna_password},#{qna_secret_chk},#{qna_title},#{qna_content},sysdate(),0,qna_board_no,0,0)
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from qna_board where qna_board_no=#{qna_board_no}
	</delete>
	
	<update id="update" parameterType="qnaboard">
		update qna_board set 
		qna_password=#{qna_password},
		qna_secret_chk=#{qna_secret_chk},
		qna_title=#{qna_title},
		qna_content=#{qna_content},
		qna_regdate=#{qna_regdate}
		where qna_board_no=#{qna_board_no}
	</update>
	
	<!-- 게시글 검색 -->
	<sql id="search">
		<if test="field!=null and field!=''">
			where ${field} like CONCAT('%',#{keyword},'%')
			
		</if> 
	</sql>
	
	<!-- 전체 게시글 수 -->
	<select id="getCount" resultType="int" parameterType="int">
		select IFnull(count(*),0) from qna_board q inner join member_Info m on q.mem_no=m.mem_no
		<include refid="search" />
	</select>
	
	<select id="list" resultType="hashmap" parameterType="hashmap">
		select q.*,m.Nickname  from qna_board q inner join member_Info m on q.mem_no=m.mem_no
		<include refid="search" />
		order by q.qna_board_no desc
		limit #{startRow},10
	</select>
	
	<select id="detail" resultType="qnaboard" parameterType="int">
		select * from qna_board where qna_board_no=#{qna_board_no}
	</select>

</mapper>